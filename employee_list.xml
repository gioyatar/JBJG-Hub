<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".EmployeeListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:background="@drawable/rounded_searchbar"
            android:drawableEnd="@android:drawable/ic_menu_search"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>


        <TextView
            android:id="@+id/week_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/position_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/employees_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employees"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/employees_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Employee 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_corners"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/employee_1_image"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Employee Image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar_light" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/employee_1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Justine De Castro"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/employee_1_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submitted: 40 hrs"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

            </LinearLayout>

            <!-- Employee 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_corners"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/employee_2_image"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/avatar_light"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Employee Image"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/employee_2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jazrhyl Pacot"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/employee_2_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submitted: 99 hrs"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

            </LinearLayout>

            <!-- Employee 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_corners"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/employee_3_image"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/avatar_light"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Employee Image"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/employee_3_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giosef Yatar"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/employee_3_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submitted: 87 hrs"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
