<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EmployeeListActivity"
    android:background="@color/bgColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:padding="16dp">

        <!-- Available Button

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />
        -->

            <!-- Search Bar -->
            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_searchbar"
                android:drawableEnd="@android:drawable/ic_menu_search"
                android:drawablePadding="10dp"
                android:hint="Search"
                android:padding="10dp"
                android:textSize="16sp" />

            <!-- Position -->
            <TextView
                android:id="@+id/week_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Position"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/position_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/employees_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Employees"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <!-- Scrollable Employees List -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/employees_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Employee 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/rounded_corners"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/employee_1_image"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Employee Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/avatar_light" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/employee_1_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Justine De Castro"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/employee_1_hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Position: Senior Frontend Dev"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Employee 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/rounded_corners"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/employee_2_image"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Employee Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/avatar_light" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/employee_2_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jazrhyl Pacot"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/employee_2_hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Position: Junior Frontend Dev"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Employee 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/rounded_corners"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/employee_3_image"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Employee Image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/avatar_light" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/employee_3_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giosef Yatar"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/employee_3_hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Position: CTO (Web Focus)"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <!-- Add Employee Button -->
            <Button
                android:id="@+id/addEmployeeBTN"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/loginText"
                android:text="Add Employee"
                android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
