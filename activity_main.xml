<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo inside the background image at the top-left corner -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_dark"
        app:layout_constraintTop_toTopOf="@id/backgroundImage"
        app:layout_constraintStart_toStartOf="@id/backgroundImage"
        app:layout_constraintMargin="16dp" />

    <!-- Welcome Text inside the ConstraintLayout -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcomeText"
        android:textColor="@color/loginText"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/backgroundImage"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Main Content (Text, EditTexts, Button, etc.) -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/welcomeText">

        <!-- Name Label (shifted to the left) -->
        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameLabel"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:textColor="@color/loginEditText"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="-130dp" /> <!-- Shifted left -->

        <!-- Name EditText -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:hint="@string/hintName"
            android:background="@drawable/rounded_login"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <!-- Password Label (shifted to the left) -->
        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passwordLabel"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@color/loginEditText"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="-113dp" /> <!-- Shifted left -->

        <!-- Password EditText -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:hint="@string/passwordHint"
            android:inputType="textPassword"
            android:background="@drawable/rounded_login"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <!-- Forgot Password aligned properly -->
        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgetPassword"
            android:textColor="@color/loginHyperLink"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="@string/loginButtonText"
            android:backgroundTint="@color/loginText"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"/>

        <!-- LinearLayout to place "Not a member?" and "Register now" side by side -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/notAMemberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notAMember"
                android:textSize="14sp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registerNow"
                android:textColor="@color/loginHyperLink"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
