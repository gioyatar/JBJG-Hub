<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgColor"
    tools:context=".DashboardActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="@drawable/rounded_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboardText"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Submitted Availability Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboardDateTodayText"
            android:textSize="15sp"
            android:layout_marginTop="16dp" />

        <!-- Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_date"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/employee_1_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:contentDescription="Calendar Image"
                android:scaleType="centerCrop"
                android:src="@drawable/calendar_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/employee_1_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="April 5, 2025"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/employee_1_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saturday"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Employees and Time -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp">

            <!-- Total Employees -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/rounded_date"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/adada"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Total Employees"
                        android:textSize="18sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:id="@+id/adadadada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2500"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_date"
                android:padding="8dp">

                <TextView
                    android:id="@+id/time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time in Philippines now"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/time_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22:50:47"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/timezone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UTC +8\nPhilippine Time (PHT)"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10sp"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Random Quotes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_date"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/quoteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='“Success is not final, failure is not fatal: It is the courage to continue that counts.” \n– Winston Churchill"'
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- View Employees Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to view employee list"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <Button
                android:id="@+id/viewEmployeesButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="View Employees"
                android:background="@drawable/rounded_button"
                android:textColor="@color/loginHyperLink"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:elevation="0dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
